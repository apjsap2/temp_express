<% layout('layouts/boilerplate') %> 

<div class="wrapper">
    <div class="add-button" onclick="location.href='/apps/comments/new'">
        <div class="add-button-text">Add</div>
    </div>
    <% for (element of comments) { %> 
    <div class="comment-box">
        <p class="comment-text"><%= element.comment %> </p>
        <p class="comment-date"><%= element.date %> </p>
        <p class="comment-user"><%= element.user %> </p>
        <div class="button"><img src="/img/dots-loading.png" alt="더보기" onclick="location.href=`/apps/comments/<%=element._id%>/edit`"></div>
    </div>
    <% } %> 
</div>